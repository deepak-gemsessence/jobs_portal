<h1 class="text-center">Create an account</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autocomplete: "off", class: "form-control", placeholder: "Enter First Name" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autocomplete: "off", class: "form-control", placeholder: "Enter Last Name" %>
  </div>

  <div class="form-group">
    <%= f.label :username %><br />
    <%= f.text_field :username, autocomplete: "off", class: "form-control", placeholder: "Enter username" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter E-mail" %>
  </div>

  <div class="form-group">
    <%= f.label :password %> <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter Password" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm Password" %>
  </div>

  <div class="form-group">
    <%#= f.label :user_type %>
    <%#= f.select(:user_type, [ 'Job-seeker', 'Job-recruiter' ], class: "form-control") %>
  </div>



  <div class="form-group">
    <%= f.label :user_type %>
    <%= f.select(:user_type, options_for_select([['Job-seeker', 'Job-seeker'], ['Job-recruiter', 'Job-recruiter']]), {}, {class: "form-control"}) %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
